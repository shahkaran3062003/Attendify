<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/classicon"
                android:backgroundTint="@color/secondary_bg_light"
                android:background="@drawable/my_button"
                android:layout_marginRight="16dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtClassTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="MCA"
                    style="@style/homeClassTitle"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Branch: "
                        style="@style/homeClassSubTitle"
                        />

                    <TextView
                        android:id="@+id/txtClassBranch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="MCA"
                        style="@style/homeClassSubTitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=", Sem: "
                        style="@style/homeClassSubTitle"/>

                    <TextView
                        android:id="@+id/txtClassSem"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2"
                        style="@style/homeClassSubTitle"/>

                </LinearLayout>




            </LinearLayout>

            <TextView
                android:id="@+id/txtStudentCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="23"
                style="@style/homeClassNumber"
                android:gravity="center"
                />

        </LinearLayout>



</LinearLayout>